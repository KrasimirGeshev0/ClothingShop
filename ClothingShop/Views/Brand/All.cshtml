@using Microsoft.AspNetCore.Mvc.TagHelpers
@using ClothingShop.Models.Clothes
@using ClothingShop.Infrastructure.Data.Enums
@model AllBrandsQueryModel

@{
    ViewBag.Title = "All Brands";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />
<form method="get">
    <div class="row">
        <div class="form-group col-md-6" style="position: relative; left: 20%;">
            <label asp-for="SearchTerm"></label>
            <input asp-for="SearchTerm" class="form-control" placeholder="Search">
        </div>

        <div class="col-md-3 mt-4">
            <div class="form-group" style="position: relative; left: 100%;">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>


@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.Brands.Count() /
        AllClothesQueryModel.ClothesPerPage);
}

<div class="row mb-5">
    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="Brand"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-searchTerm="@Model.SearchTerm"><<</a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
        !Model.Brands.Any();
    }

    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary
           @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
           asp-controller="Brand"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-searchTerm="@Model.SearchTerm">>></a>
    </div>
</div>

@if (!Model.Brands.Any())
{
    <h2 class="text-center">No clothes found by the given criteria!</h2>
}

<div class="row">
    @foreach (var brand in Model.Brands)
    {
        <partial name="_BrandsPartial" model="@brand" />
    }
</div>

