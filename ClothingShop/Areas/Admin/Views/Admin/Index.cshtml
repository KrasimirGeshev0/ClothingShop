@{
    ViewData["Title"] = "Admin Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area - you can <b>read</b>, <b>create</b>,
        <b>delete</b> and <b>edit</b> all clothes in the system.
    </p>
    <p class="lead mt-1">
        You can also see <b>all users and sellers</b> their <b>cloth for selling</b> in the system.
    </p>
    <hr class="my-4">
    <p>
        <a asp-area="Admin" asp-controller="User" asp-action="All"
           class="btn btn-primary btn-lg">All Users</a>
    </p>
    <p>
        <a asp-area="" asp-controller="Cloth" asp-action="Add"
           class="btn btn-primary btn-lg">Add Cloth</a>
    </p>
    <p>
        <a asp-area="Admin" asp-controller="Brand" asp-action="Add"
           class="btn btn-primary btn-lg">Add Brand</a>
    </p>
    <p>
        <a asp-area="" asp-controller="Cloth" asp-action="All"
           class="btn btn-primary btn-lg">All Clothes</a>
    </p>
    <p>

        <a asp-area="Admin" asp-controller="Cloth" asp-action="Mine"
           class="btn btn-primary btn-lg">My Clothes</a>
    </p>

</div>